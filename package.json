{
  "name": "marketplace-platform",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.29.3",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "dev": "node esbuild.config.mjs --watch --run",
    "build": "node esbuild.config.mjs",
    "start": "node --enable-source-maps dist/index.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "format": "prettier -w .",
    "test": "node --input-type=module -e \"import { readdirSync } from 'node:fs'; import { join } from 'node:path'; import { spawnSync } from 'node:child_process'; const roots = ['test', 'src']; const files = []; const skip = new Set(['node_modules', 'dist', '.git']); const walk = (dir) => { for (const entry of readdirSync(dir, { withFileTypes: true })) { if (entry.isDirectory()) { if (!skip.has(entry.name)) walk(join(dir, entry.name)); continue; } if (/\\.(test|spec)\\.ts$/.test(entry.name)) files.push(join(dir, entry.name)); } }; for (const root of roots) { try { walk(root); } catch {} } if (!files.length) { console.log('No tests found'); process.exit(0); } const result = spawnSync('mocha', ['--import', 'tsx', ...files], { stdio: 'inherit', shell: process.platform === 'win32' }); process.exit(result.status ?? 1);\"",
    "test:coverage": "c8 npm run test",
    "migrate:create": "node-pg-migrate create --migrations-dir migrations --database-url-var DATABASE_URL",
    "migrate:up": "node-pg-migrate up --migrations-dir migrations --database-url-var DATABASE_URL",
    "migrate:down": "node-pg-migrate down --migrations-dir migrations --database-url-var DATABASE_URL",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,ts}": [
      "eslint --fix",
      "prettier -w"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier -w"
    ]
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.4.0",
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.7.0",
    "@fastify/swagger-ui": "^5.2.5",
    "@opentelemetry/auto-instrumentations-node": "^0.69.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.212.0",
    "@opentelemetry/sdk-node": "^0.212.0",
    "bullmq": "^5.69.1",
    "dayjs": "^1.11.19",
    "dotenv": "^17.3.1",
    "fastify": "^5.7.4",
    "inversify": "^7.11.0",
    "ioredis": "^5.9.3",
    "kysely": "^0.28.11",
    "nanoid": "^5.1.6",
    "nats": "^2.29.3",
    "node-pg-migrate": "^8.0.4",
    "pg": "^8.18.0",
    "pino": "^10.3.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "c8": "^10.1.3",
    "chai": "^6.2.2",
    "esbuild": "^0.27.3",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mocha": "^11.7.5",
    "prettier": "^3.8.1",
    "sinon": "^21.0.1",
    "testcontainers": "^11.11.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
